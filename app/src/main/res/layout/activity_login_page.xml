<?xml version="1.0" encoding="utf-8"?>



<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login_page"
    android:background="@color/black"
    android:padding="20dp">

    <TextView
        android:id="@+id/tv_create_an_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create_an_account"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:padding="20dp"
        app:layout_constraintStart_toEndOf="@id/ibtn_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageButton
        android:id="@+id/ibtn_back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/back_arrow"
        android:padding="20dp"
        app:layout_constrainttop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_create_an_account"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:clipToPadding="true"
        android:padding="20dp"
        app:layout_constraintBottom_toTopOf="@id/btn_create"
        >

        <TextView
            android:id="@+id/tv_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:text="Email address"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:fontFamily="@font/font2"/>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tiet_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_email"
            android:background="@color/white"
            android:hint="Enter your email address"
            android:padding="20dp"
            android:fontFamily="@font/font1"
            android:textColor="@color/black"
           />

        <TextView
            android:id="@+id/tv_create_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tiet_email"
            android:fontFamily="@font/font2"
            android:paddingTop="20dp"
            android:paddingBottom="10dp"
            android:text="Create Password"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tiet_create_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_create_password"
            android:background="@color/white"
            android:hint=" Read the details below"
            android:padding="20dp"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/tv_repeat_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tiet_create_password"
            android:paddingTop="20dp"
            android:paddingBottom="10dp"
            android:text="Repeat Password"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:fontFamily="@font/font2"/>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tiet_repeat_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_repeat_password"
            android:background="@color/white"
            android:padding="20dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tv_password_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tiet_repeat_password"
            android:fontFamily="@font/font1"
            android:paddingTop="20dp"
            android:text="Your password should have 8 character and contain at least one number, one uppercase and one lowercase letter. You can use special character"
            android:textColor="@color/white"
            android:textSize="15dp" />


    </RelativeLayout>

    <ImageButton
        android:id="@+id/btn_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_button_background"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"


        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />
</androidx.constraintlayout.widget.ConstraintLayout>


