<?xml version="1.0" encoding="utf-8"?>



<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login_page"
    android:background="@color/black"
   >
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <ImageButton
            android:id="@+id/ibtn_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/back_arrow"
            android:padding="20dp"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:id="@+id/tv_create_an_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:padding="20dp"
            android:layout_margin="20dp"
            android:text="@string/create_an_account"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ibtn_back"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>

    <View
        android:id="@+id/vw_view_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"

        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation = "vertical"
        app:layout_constraintGuide_percent="0.10"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation = "vertical"
        app:layout_constraintGuide_percent="0.90"/>

        <TextView
            android:id="@+id/tv_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:text="Email address"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:fontFamily="@font/font2"
            app:layout_constraintStart_toStartOf="@id/gl_start"
            app:layout_constraintEnd_toEndOf="@id/gl_end"
            app:layout_constraintTop_toBottomOf="@id/vw_view_line"

            />


        <EditText
            android:id="@+id/tiet_email"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_email"
            android:background="@color/white"
            android:fontFamily="@font/font1"
            android:labelFor="@id/tv_email"
            android:padding="20dp"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@id/gl_end"
            app:layout_constraintStart_toStartOf="@id/gl_start"
            app:layout_constraintTop_toBottomOf="@id/tv_email" />

        <ImageView
            android:id="@id/iv_tick1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:background="@drawable/tick"
            app:layout_constraintTop_toTopOf="@id/tiet_email"
            app:layout_constraintEnd_toEndOf="@id/tiet_email"
            app:layout_constraintBottom_toBottomOf="@id/tiet_email"
            />

        <TextView
            android:id="@+id/tv_create_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tiet_email"
            android:fontFamily="@font/font2"
            android:paddingTop="20sp"
            android:paddingBottom="10dp"
            android:text="Create Password"
            android:textColor="@color/white"
            android:textSize="25sp"
            app:layout_constraintTop_toBottomOf="@id/tiet_email"
            app:layout_constraintEnd_toEndOf="@id/gl_end"
            app:layout_constraintStart_toStartOf="@id/gl_start"
            />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tiet_create_password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:hint=" Read the details below"
            android:padding="20sp"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/tv_create_password"
            app:layout_constraintEnd_toEndOf="@id/gl_end"
            app:layout_constraintStart_toStartOf="@id/gl_start"/>
        <ImageView
            android:id="@id/iv_tick1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:background="@drawable/tick"
            app:layout_constraintTop_toTopOf="@id/tiet_email"
            app:layout_constraintEnd_toEndOf="@id/tiet_email"
            app:layout_constraintBottom_toBottomOf="@id/tiet_email"
            />
        <TextView
            android:id="@+id/tv_repeat_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font2"
            android:paddingTop="20dp"
            android:paddingBottom="10dp"
            android:text="Repeat Password"
            android:textColor="@color/white"
            android:textSize="25sp"
            app:layout_constraintTop_toBottomOf="@id/tiet_create_password"
            app:layout_constraintEnd_toEndOf="@id/gl_end"
            app:layout_constraintStart_toStartOf="@id/gl_start"/>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tiet_repeat_password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="20dp"
            android:inputType="textPassword"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/tv_repeat_password"
            app:layout_constraintEnd_toEndOf="@id/gl_end"
            app:layout_constraintStart_toStartOf="@id/gl_start"/>

        <TextView
            android:id="@+id/tv_password_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font1"
            android:paddingTop="25dp"
            android:text="Your password should have 8 character and contain at least one number, one uppercase and one lowercase letter. You can use special character"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/tiet_repeat_password"
            app:layout_constraintEnd_toEndOf="@id/gl_end"
            app:layout_constraintStart_toStartOf="@id/gl_start"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_create"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_button_background"
        android:cropToPadding="true"
        android:fontFamily="@font/font2"
        android:text="Next"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="25dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintEnd_toEndOf="@id/gl_end"
        app:layout_constraintStart_toStartOf="@id/gl_start"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />



</androidx.constraintlayout.widget.ConstraintLayout>


